<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>imaging</name>
  <displayName>${project.name}</displayName>
  <class>info.magnolia.imaging.ImagingModuleConfig</class>
  <versionHandler>info.magnolia.imaging.setup.ImagingModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>4.1/*</version>
    </dependency>
  </dependencies>
  <servlets>
    <servlet>
      <name>ImagingServlet</name>
      <class>info.magnolia.imaging.ImagingServlet</class>
      <comment>Imaging Servlet</comment>
      <mappings>
        <mapping>/img/*</mapping>
      </mappings>
    </servlet>
  </servlets>
  <repositories>
    <repository>
      <name>magnolia</name>
      <workspaces>
        <workspace>imaging</workspace>
      </workspaces>
    </repository>
  </repositories>
</module>
